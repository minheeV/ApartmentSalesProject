<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.ApartmentSalesProject" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppTheme.NumberPicker" parent="Theme.ApartmentSalesProject">
        <item name="colorControlNormal">@color/theme_color</item>
    </style>


    <style name="Theme.App.ApartmentSalesStarting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/theme_color</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_apartment</item>
        <item name="postSplashScreenTheme">@style/Theme.ApartmentSalesProject</item>
    </style>
</resources>